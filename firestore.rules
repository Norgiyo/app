rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    function isAdmin() {
      return hasRole('admin') || hasRole('superadmin');
    }

    function isValidUserCreate(uid) {
      return request.resource.data.keys().hasOnly([
          'uid',
          'displayName',
          'email',
          'favoriteTeamId',
          'isPublicProfile',
          'lastLoginDate',
          'createdAt',
          'role',
          'balance',
          'shields',
          'tickets',
          'weekPoints'
        ]) &&
        request.resource.data.uid == uid &&
        request.resource.data.role == 'user' &&
        request.resource.data.balance is number &&
        request.resource.data.shields is number &&
        request.resource.data.tickets is number &&
        request.resource.data.weekPoints is number;
    }

    function isValidUserUpdate() {
      return request.resource.data.diff(resource.data).changedKeys().hasOnly([
        'displayName',
        'favoriteTeamId',
        'isPublicProfile',
        'lastLoginDate'
      ]);
    }

    function isValidPickCreate() {
      return request.resource.data.keys().hasOnly([
          'userId',
          'playerId',
          'amount',
          'odds',
          'potentialPayout',
          'status',
          'createdAt'
        ]) &&
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.playerId is string &&
        request.resource.data.amount is number &&
        request.resource.data.amount > 0 &&
        request.resource.data.odds is number &&
        request.resource.data.odds > 0 &&
        request.resource.data.potentialPayout is number &&
        request.resource.data.status == 'pending' &&
        request.resource.data.createdAt is timestamp;
    }

    // users/{uid}
    // - Read: owner and admin
    // - Create: owner (bootstrap client-side if needed)
    // - Update: owner only for non-sensitive profile fields
    // - Delete: denied
    match /users/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow create: if isOwner(uid) && isValidUserCreate(uid);
      allow update: if isOwner(uid) && isValidUserUpdate();
      allow delete: if false;
    }

    // teams/{teamId}
    // Catalog read for authenticated users.
    match /teams/{teamId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // players/{playerId}
    // Catalog read for authenticated users.
    match /players/{playerId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // matches/{matchId}
    // Read-only from client. Mutations only from backend/Admin SDK.
    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // matches/{matchId}/picks/{pickId}
    // Users can create/read only their picks, cannot mutate after create.
    match /matches/{matchId}/picks/{pickId} {
      allow read: if isSignedIn() &&
        (resource.data.userId == request.auth.uid || isAdmin());

      allow create: if isSignedIn() && isValidPickCreate();

      allow update, delete: if false;
    }

    // transactions/{txId}
    // Users only read their own history.
    match /transactions/{txId} {
      allow read: if isSignedIn() &&
        (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if false;
    }

    // teamWeeks/{docId}
    // Ranking snapshots are readable by authenticated users.
    match /teamWeeks/{docId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // auditLogs/{logId}
    // Restricted to admin roles.
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
